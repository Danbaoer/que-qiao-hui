/**app.wxss**/
.container {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  font-size: 30rpx;
  color: #666;
  font-family:Helvetica;
}
.title-gray{
  width: 100%;
  background: #f6f6f6;
  height: 30px;
  line-height: 30px;
  padding-left: 15rpx;
}
.title-subclass{
  color:#999;
  margin-top:5px;
}
.title-default{
  background: #fafafa;
  padding-left: 12rpx;
  height: 32px;
  line-height: 32px;
  margin-bottom:5px;
}
.line{
  display: inline-block;
  width: 6rpx;
  height: 12px;
  background: #4ccdfc;
  margin-right: 10rpx;
}
.authent{
  font-size: 20rpx;
  color: #00aa18;
}
textarea{
  margin-top: 5px;
  width: 96%;
  min-height: 80px;
  border-radius: 4px;
  border: 1px solid #e2e2e2;
}
.indent{
  text-indent: 2em;
}
/* 单选钮样式 */
radio {
  transform:scale(0.6);
}
