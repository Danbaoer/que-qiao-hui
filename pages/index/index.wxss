/**index.wxss**/
.right-title{
  float: right;
  padding-right: 15rpx;
}
.right-title text{
  color: #fea500;
  border: 1px solid #fea500;
  border-radius: 10px;
  letter-spacing: 1px;
  font-size: 24rpx;
  padding: 3px 8px;
  margin: 0 5px;
}
.animate{
  width: 100%;
  height: 100%;
  position: relative;
}
.login-shade{
  width: 100vw;
  height: 100vh;
  position: fixed;
  background-color: rgba(0, 0, 0, 0.5);
  z-index: 2;
  font-size:40rpx;
  color:#999;
}
.sign{
  font-size: 24rpx;
  color:#fea500;
  height: 22px;
  line-height: 22px;
  border-radius:8px;
  border: 1px solid #fea500;
  background-color: #fff;
  margin-top: 5px;
}
.sign-shade{
  width: 100%;
  height: 100%;
  position: fixed;
  background-color: rgba(0, 0, 0, 0.5);
  z-index: 2;
}
.sign-info{
  width: 58vw;
  position: absolute;
  top: 55vh;
  left: 22vw;
  margin: auto;
  color: #fff;
  line-height: 24px;
  font-size: 26rpx;
}
.swiper_box {
  width: 98%;
}
swiper-item{
  padding: 5px 2px;
  border-radius: 15px;
  margin: 0 2px;
}
.scrollImg{
  height: 100%;
  width: 100%;
}
.vip{  
  width: 100%;
  padding: 40rpx 5rpx 25rpx;
}
.search{
  float: right;
  padding-right: 26rpx;
  font-size: 26rpx;
}
.images{
  display: flex;
  flex-direction: column;
  height: 100%;
}
.image-box{
  width: 98%;
  display: block;
  margin-top: 10px;
  padding-bottom: 10px;
  border-bottom: 6px solid #fafafa;
}
.image-box image{
  width: 99%;
  background-size: 100%;
  margin: 5rpx;
  border-radius: 10rpx;
}
.image-foot text{
  padding-left: 20rpx;
}
.image-head{
  margin: 20rpx 0;
  padding-left: 20rpx;
}
.search-detail{
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #fff;
  padding: 0 8rpx;
}
.section__title{
  text-align: center;
  color:#999;
  line-height: 70px;
  letter-spacing: 2px;
}
.group,.age-area{
  display: flex;
  text-align: center;
}
.group label,.age,.area{
  flex:1;
}
.group radio,.junior-college checkbox{
  display: none;
}
.group image,.junior-college image{
  width: 30px;
  height: 30px;
  display: block;
  margin: 10px auto;
}
.group text{
  display: inline-block;
}
.junior-group{
  display: flex;
  text-align: center;
  flex-wrap: wrap;
  margin: auto;
}
.junior-group label{
  display: block;
  width: 30vw;
  margin-top: 8px;
}
.btn-area{
  position: absolute;
  bottom:10px;
  left: 30vw;
}
.btn-area button{
  margin: 8px;
}
radio .wx-radio-input{
  display: inline-block;
  background: #e2e2e2;
  border-radius: 8px;
  padding: 3px 0;
  margin: 10rpx;
}
radio .wx-radio-input.wx-radio-input-checked{
   background: red;
}
label{
  display: inline-block;
  background: #e2e2e2;
  border-radius: 8px;
  padding: 3px 0;
  margin: 10rpx;
}
label.active,label.is_checked{
   background: #ee99ff;
}
.ship_area{
  width: 100%;
  height: 80rpx;
  border-bottom: 2rpx solid #F1f3f2;
}
.ship_area text{
  float: left;
  line-height: 80rpx;
  padding-left: 20rpx;
  font-size: 28rpx;
  color: #212121;
}
.ship_area .ship_citychoose{
  width: auto;
  font-size: 28rpx;
  line-height: 80rpx;
  color: #828282;
  padding-left: 40rpx;
  padding-top: 14rpx;
}