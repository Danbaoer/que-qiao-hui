/* pages/index/detail/detail.wxss */
.detail{
  font-size: 30rpx;
  color: #666;
  font-family:Helvetica;
}
.swiper_box{
  margin: 10rpx;
  height: 230px;
  border: 1px solid #e2e2e2;
  border-radius:6px;
}
.followbtn{
  position:absolute;
  right:4vw;
  top:30vh;
  background:#ee99ff;
  color:#fff;
  border-radius:4px;
  padding:0 6px;
  font-size:22rpx;
}
.image-box{
  width: 100%;
}
.image-box image{
  width: 100%;
  margin: 5rpx;
  border-radius: 8px;
}
.image-head{
  margin: 12rpx 16rpx;
}
.image-foot{
  margin: 12rpx 4rpx;
}
.image-foot text{
  padding-left: 15rpx;
}
.other{
  padding: 3px 15rpx;
  margin-top: 5px;
  line-height: 34px;
  background: #fafafa;
  height:100%;
}
.other .info{
  line-height: 42px;
  border-radius:8px;
  display: flex;
  justify-content: space-between;
  background: #fff;
  margin:6px 0;
}
.other text{
  padding-left: 15rpx;
}
.info-right{
  float: right;
  text-align: right;
  padding-right: 15rpx;
}
.introduce{
  width:100%;
  min-height:70px;
  text-indent: 2em;
  border-radius: 4px;
  background: #fff;
}
.contact{
  margin-top:20px;
  border-radius:6px;
  color:#fff;
  font-size: 28rpx;
  background: #ee99ff;
  white-space: nowrap;
  width: 23vw;
  padding: 0;
}
.leave{
  color: #4ccdfc;
  line-height: 40px;
  padding-left: 10rpx;
}