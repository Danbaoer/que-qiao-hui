<!--pages/my/redAppliate/service/service.wxml-->
<view class='container'>
	<form class='other' bindsubmit="formSubmit" bindreset="formReset">
	  <view class='title-gray'>客服留言</view>
	  <textarea focus name="suggest"  value='{{form_info}}' style='margin-left:15rpx;'></textarea>
	  <view class='tel'>如果不介意的话，请在下方留下您的联系方式</view>
	  <input type='number' maxlength="11" name="mobile" value='{{form_info}}' cursor-spacing='20' class='telNum'></input>
	  <button class='submit-suggest' formType="submit">提交意见</button>
	</form>
  <view bindtap='call' class='call'>直接联系</view>
</view>

