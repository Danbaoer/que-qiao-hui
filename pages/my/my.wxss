/* pages/my/my.wxss */
.userinfo {
  display: flex;
  background: #ee99ff;
  width: 100%;
  height: 150px;
}
.userinfo view{
  flex: 1;
}
.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx 30rpx;
  border-radius: 50%;
  border: 1px solid #e2e2e2;
}
.userinfo-nickname {
  height: 30px;
  color:#fff;
  line-height:40px;
  padding:23px 20rpx;
  white-space: nowrap;
}
button{
  background: #ee99ff;
  border-color: #ee99ff;
  color:#fff;
  height: 36px;
  line-height:2px;
  padding:23px 40rpx;
  font-size: 30rpx;
  margin: 20px 40px;
}
.log-list {
  display: flex;
  flex-direction: column;
  position: relative;
}
.log-item {
  margin: 10rpx;
}
.set{
  width: 22px;
  height: 22px;
  padding: 50rpx 60rpx;
  float: right;
}
.my-notice{
  display: flex;
  position: absolute;
  top: 18vh;
  left: 5%;
  border-radius: 10px;
  background: #fafafa;
  width: 90%;
  line-height: 36px;
  box-shadow: 0px 3px 3px #eee;
}
.my-notice image{
  display: block;
  width: 22px;
  height: 22px;
  margin: 10px auto;
  padding-top: 5px;
}
.my-notice view{
  flex: 1;
  text-align: center;
}
.my-notice view:nth-child(1){
 border-right: 1px solid #f6f6f6;
}
.my-help{
  margin-top: 60px;
}
.my-foot{
  margin-top: 15px;
}
.my-help,.my-foot{
  width: 100%;
  display: flex;
  flex-direction: row;
  line-height: 40px;
  padding: 0 15rpx;
}
.my-help image,.my-foot image{
  display: block;
  width: 28px;
  height: 28px;
  margin: 8px auto;
}
.my-help view,.my-foot view{
  flex: 1;
  justify-content: space-between;
  text-align: center;
}
.modalTip{
  text-align: center;
}
